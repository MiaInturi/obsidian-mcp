{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"erasableSyntaxOnly": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules", "dist"]
}
